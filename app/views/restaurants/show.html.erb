<h1><%= @restaurant.name %></h1>
<h3><%= @restaurant.category.capitalize %></h3>
<h5><%= @restaurant.address %></h5>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %>
    	<%= link_to "Remove",
                  review_path(review),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: "btn btn-danger btn-sm" %>
    </li>
  <% end %>
</ul>

<%= link_to "Write a review", new_restaurant_review_path(@restaurant), :class => "btn btn-success btn-large mt-3"  %>
<%= link_to "Back", restaurants_path, :class => "btn btn-primary btn-large mt-3" %>